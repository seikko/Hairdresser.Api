@model Hairdresser.Api.Models.ViewModels.AppointmentIndexViewModel
@{
    ViewData["Title"] = "Randevu Yönetimi";
    var prevDate = DateOnly.TryParse(Model.SelectedDate, out var d) ? d.AddDays(-1).ToString("yyyy-MM-dd") : Model.SelectedDate;
    var nextDate = DateOnly.TryParse(Model.SelectedDate, out var d2) ? d2.AddDays(1).ToString("yyyy-MM-dd") : Model.SelectedDate;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0"><i class="bi bi-pencil-square"></i> Randevu Yönetimi</h2>
        <div class="text-muted">Tarih: <strong>@Model.SelectedDate</strong></div>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary"
           asp-action="Index"
           asp-route-date="@prevDate"
           asp-route-workerId="@Model.SelectedWorkerId"
           asp-route-status="@Model.SelectedStatus"
           asp-route-search="@Model.Search">
            <i class="bi bi-chevron-left"></i> Önceki Gün
        </a>
        <a class="btn btn-outline-secondary"
           asp-action="Index"
           asp-route-date="@nextDate"
           asp-route-workerId="@Model.SelectedWorkerId"
           asp-route-status="@Model.SelectedStatus"
           asp-route-search="@Model.Search">
            Sonraki Gün <i class="bi bi-chevron-right"></i>
        </a>
        <a class="btn btn-primary"
           asp-action="Create"
           asp-route-date="@Model.SelectedDate"
           asp-route-workerId="@Model.SelectedWorkerId">
            <i class="bi bi-plus-circle"></i> Yeni Randevu
        </a>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-2 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Tarih</label>
                <input class="form-control" type="date" name="date" value="@Model.SelectedDate" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Çalışan</label>
                <select class="form-select" name="workerId">
                    <option value="">Tüm Çalışanlar</option>
                    @foreach (var w in Model.Workers)
                    {
                        if (Model.SelectedWorkerId == w.Id)
                        {
                            <option value="@w.Id" selected>@w.Name</option>
                        }
                        else
                        {
                            <option value="@w.Id">@w.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Durum</label>
                <select class="form-select" name="status">
                    <option value="">Tümü</option>
                    <option value="pending" selected="@(Model.SelectedStatus == "pending")">Bekliyor</option>
                    <option value="confirmed" selected="@(Model.SelectedStatus == "confirmed")">Onaylandı</option>
                    <option value="completed" selected="@(Model.SelectedStatus == "completed")">Tamamlandı</option>
                    <option value="cancelled" selected="@(Model.SelectedStatus == "cancelled")">İptal</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Arama (isim/telefon/hizmet)</label>
                <input class="form-control" type="text" name="search" value="@Model.Search" />
            </div>
            <div class="col-md-1 d-grid">
                <button class="btn btn-outline-primary" type="submit">
                    <i class="bi bi-funnel"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        @if (Model.Appointments.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th width="10%">Saat</th>
                            <th width="18%">Çalışan</th>
                            <th width="22%">Müşteri</th>
                            <th width="12%">Durum</th>
                            <th width="10%">Süre</th>
                            <th>Hizmet</th>
                            <th width="18%" class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model.Appointments)
                        {
                            <tr>
                                <td><strong><i class="bi bi-clock"></i> @a.Time</strong></td>
                                <td><span class="badge bg-secondary">@a.WorkerName</span></td>
                                <td>
                                    <div><i class="bi bi-person"></i> @a.CustomerName</div>
                                    <small class="text-muted"><i class="bi bi-telephone"></i> +@a.PhoneNumber</small>
                                </td>
                                <td><span class="@a.StatusBadgeClass">@a.StatusText</span></td>
                                <td>@a.DurationMinutes dk</td>
                                <td>@(string.IsNullOrWhiteSpace(a.ServiceType) ? "-" : a.ServiceType)</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@a.Id">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@a.Id">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="p-4 text-center text-muted">
                <i class="bi bi-info-circle"></i> Bu tarihte randevu bulunamadı.
            </div>
        }
    </div>
</div>


