@model Hairdresser.Api.Models.ViewModels.AppointmentCreateViewModel
@using Hairdresser.Api.Models

@{
    ViewData["Title"] = "Yeni Randevu";
    var workers = ViewBag.Workers as List<Worker> ?? new();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-plus-circle"></i> Yeni Randevu</h2>
</div>

<div class="card">
    <div class="card-body">

        <form method="post">
            @Html.AntiForgeryToken()

            <div class="row g-3">

                <!-- TELEFON -->
                <div class="col-md-4">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>

                <!-- MÜŞTERİ -->
                <div class="col-md-4">
                    <label asp-for="CustomerName" class="form-label"></label>
                    <input asp-for="CustomerName" class="form-control" />
                </div>

                <!-- ÇALIŞAN -->
                <div class="col-md-4">
                    <label asp-for="WorkerId" class="form-label"></label>
                    <select asp-for="WorkerId"
                            class="form-select"
                            id="workerSelect">
                        <option value="">Çalışan seçiniz</option>
                        @foreach (var w in workers)
                        {
                            <option value="@w.Id">@w.Name</option>
                        }
                    </select>
                </div>

                <!-- TARİH -->
                <div class="col-md-3">
                    <label asp-for="AppointmentDate" class="form-label"></label>
                    <input asp-for="AppointmentDate" type="date" class="form-control" />
                </div>

                <!-- SAAT -->
                <div class="col-md-3">
                    <label asp-for="AppointmentTime" class="form-label"></label>
                    <input asp-for="AppointmentTime" type="time" class="form-control" />
                </div>

                <!-- DURUM -->
                <div class="col-md-3">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" class="form-select">
                        <option value="pending">Bekliyor</option>
                        <option value="confirmed">Onaylandı</option>
                        <option value="completed">Tamamlandı</option>
                        <option value="cancelled">İptal</option>
                    </select>
                </div>

                <!-- HİZMETLER -->
                <div class="col-md-12">
                    <label class="form-label fw-bold">
                        <i class="bi bi-scissors"></i> Hizmetler
                    </label>

                    <div id="servicesContainer">
                        <div class="alert alert-info">
                            Çalışan seçiniz
                        </div>
                    </div>

                    <span asp-validation-for="SelectedServiceId" class="text-danger"></span>
                </div>

                <!-- NOT -->
                <div class="col-md-12">
                    <label asp-for="Notes" class="form-label"></label>
                    <textarea asp-for="Notes" class="form-control"></textarea>
                </div>

                <!-- BUTON -->
                <div class="col-12 text-end">
                    <button class="btn btn-primary">
                        <i class="bi bi-save"></i> Kaydet
                    </button>
                </div>

            </div>
        </form>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
document.addEventListener("DOMContentLoaded", function () {

    const workerSelect = document.getElementById("workerSelect");
    const container = document.getElementById("servicesContainer");

    workerSelect.addEventListener("change", function () {

        const workerId = this.value;
        container.innerHTML = '<div class="alert alert-info">Yükleniyor...</div>';

        if (!workerId) {
            container.innerHTML =
                '<div class="alert alert-warning">Çalışan seçiniz</div>';
            return;
        }

        fetch(`/Appointments/GetServicesByWorker?workerId=${workerId}`)
            .then(r => r.json())
            .then(data => {

                if (!data || data.length === 0) {
                    container.innerHTML =
                        '<div class="alert alert-warning">Bu çalışana ait hizmet yok</div>';
                    return;
                }

                let html = '<div class="list-group">';

                data.forEach(s => {
                    html += `
                        <label class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <input class="form-check-input me-2"
                                       type="radio"
                                       name="SelectedServiceId"
                                       value="${s.serviceId}" />

                                <strong>${s.serviceName}</strong>
                                <small class="text-muted">
                                    (${s.durationMinutes} dk)
                                </small>
                            </div>

                            <span class="badge bg-primary">
                                ${s.price} ₺
                            </span>
                        </label>
                    `;
                });

                html += '</div>';
                container.innerHTML = html;
            })
            .catch(() => {
                container.innerHTML =
                    '<div class="alert alert-danger">Hizmetler yüklenemedi</div>';
            });
    });
});
</script>



