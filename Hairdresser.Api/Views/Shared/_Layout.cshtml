<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kuaför Randevu Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-scissors"></i> Kuaför Yönetim Paneli
                </a>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-calendar-check"></i> Randevular
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Workers" asp-action="IndexWorkerService">
                                    <i class="bi bi-gear"></i> Hizmetler
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Appointments" asp-action="Index">
                                    <i class="bi bi-pencil-square"></i> Randevu Yönetimi
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Workers" asp-action="Index">
                                    <i class="bi bi-people"></i> Çalışanlar
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">© 2025 Kuaför Randevu Sistemi</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // GLOBAL DEĞİŞKENLER
        let appointmentModal, modalCustomer, modalPhone, modalService, modalTime;
        let editLink, cancelLink;

        // MODAL INIT (DOM hazır olmasa bile lazy initialize)
        function initModal() {
            const modalEl = document.getElementById("appointmentModal");
            if (!modalEl || !window.bootstrap) return false;

            appointmentModal = new bootstrap.Modal(modalEl, { backdrop: 'static', keyboard: true });

            modalCustomer = document.getElementById("custName");
            modalPhone    = document.getElementById("custPhone");
            modalService  = document.getElementById("custService");
            modalTime     = document.getElementById("custTime");

            editLink   = document.getElementById("detailLink");
            cancelLink = document.getElementById("cancelLink");

            return true;
        }

        // GLOBAL FUNK: MODAL GÖSTERME
        window.showAppointmentModal = function(customer, phone, service, time, id) {
            if (!appointmentModal && !initModal()) {
                console.error("Modal hazır değil!");
                return;
            }

            modalCustomer.textContent = customer || "-";
            modalPhone.textContent    = phone || "-";
            modalService.textContent  = service || "-";
            modalTime.textContent     = time || "-";

            editLink.href   = `/Appointments/Edit/${id}`;
            cancelLink.href = `/Appointments/Delete/${id}`;

            appointmentModal.show();
        };

        // BOŞ HÜCRE / RANDEVU OLUŞTUR
        window.openCreate = function(date, workerId, time){
            window.location.href = `/Appointments/Create?date=${date}&workerId=${workerId}&time=${time}`;
        };
    </script>
</body>
</html>

