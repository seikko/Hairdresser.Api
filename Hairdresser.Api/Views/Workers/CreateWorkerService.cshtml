@model Hairdresser.Api.Models.ViewModels.ServiceViewModel
@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateWorkerService" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="ServiceName" class="form-label">Hizmet Adı</label>
                        <input asp-for="ServiceName" class="form-control" placeholder="Örn: Saç Kesimi" />
                        <span asp-validation-for="ServiceName" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="DurationMinutes" class="form-label">Süre (dakika)</label>
                            <input asp-for="DurationMinutes" type="number" class="form-control" placeholder="Örn: 30" />
                            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Price" class="form-label">Fiyat (₺)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Örn: 200.00" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Geri
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
