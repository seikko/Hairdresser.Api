@model IEnumerable<Hairdresser.Api.Models.ViewModels.WorkerListViewModel>
@{
    ViewData["Title"] = "Çalışanlar";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="bi bi-people"></i> Çalışanlar
    </h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Çalışan Ekle
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Any())
{
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>İsim</th>
                            <th>Uzmanlık</th>
                            <th>Çalışma Günleri</th>
                            <th class="text-center">Bugün</th>
                            <th class="text-center">Toplam</th>
                            <th class="text-center">Durum</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var worker in Model)
                        {
                            <tr class="@(worker.IsActive ? "" : "table-secondary")">
                                <td>
                                    <strong><i class="bi bi-person-badge"></i> @worker.Name</strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(worker.Specialty))
                                    {
                                        <span class="badge bg-info">@worker.Specialty</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(worker.WorkingDays))
                                    {
                                        <small>@worker.WorkingDays</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Mesai tanımlı değil</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary">@worker.TodayAppointments</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary">@worker.TotalAppointments</span>
                                </td>
                                <td class="text-center">
                                    @if (worker.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@worker.Id" class="btn btn-outline-primary" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" asp-action="ToggleActive" asp-route-id="@worker.Id" class="d-inline">
                                            <button type="submit" class="btn btn-outline-warning" title="Durumu Değiştir">
                                                <i class="bi bi-toggle-@(worker.IsActive ? "on" : "off")"></i>
                                            </button>
                                        </form>
                                        <a asp-action="Delete" asp-route-id="@worker.Id" class="btn btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle"></i> Henüz çalışan eklenmemiş.
        <a asp-action="Create" class="alert-link">İlk çalışanı ekleyin</a>.
    </div>
}

