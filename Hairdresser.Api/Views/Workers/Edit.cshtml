@model Hairdresser.Api.Models.ViewModels.WorkerViewModel
@{
    ViewData["Title"] = "Çalışan Düzenle";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-pencil"></i> Çalışan Düzenle: @Model.Name
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Çalışan Bilgileri -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Specialty" class="form-label"></label>
                            <input asp-for="Specialty" class="form-control" />
                            <span asp-validation-for="Specialty" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>

                    <hr />

                    <!-- HİZMETLER (CHECKBOX) -->
                    <h5 class="mb-3">
                        <i class="bi bi-scissors"></i> Hizmetler
                    </h5>

                    <div class="row">
                        @foreach (var service in Model.AvailableServices)
                        {
                            var isChecked = Model.SelectedServiceIds != null &&
                                            Model.SelectedServiceIds.Contains(service.Id);

                            <div class="col-md-6 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="SelectedServiceIds"
                                           value="@service.Id"
                                           id="service_@service.Id"
                                           @(isChecked ? "checked" : "") />

                                    <label class="form-check-label" for="service_@service.Id">
                                        <strong>@service.ServiceName</strong>
                                        <small class="text-muted">
                                            (@service.DurationMinutes dk - @service.Price ₺)
                                        </small>
                                    </label>
                                </div>
                            </div>
                        }
                    </div>

                    <hr />

                    <!-- ÇALIŞMA SAATLERİ -->
                    <h5 class="mb-3">
                        <i class="bi bi-clock"></i> Çalışma Saatleri
                    </h5>

                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>Gün</th>
                                    <th>Çalışıyor</th>
                                    <th>Başlangıç</th>
                                    <th>Bitiş</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Schedules.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            <input type="hidden" name="Schedules[@i].Id" value="@Model.Schedules[i].Id" />
                                            <input type="hidden" name="Schedules[@i].DayOfWeek" value="@Model.Schedules[i].DayOfWeek" />
                                            <input type="hidden" name="Schedules[@i].DayName" value="@Model.Schedules[i].DayName" />
                                            <strong>@Model.Schedules[i].DayName</strong>
                                        </td>
                                        <td>
                                            <input type="checkbox"
                                                   name="Schedules[@i].IsWorking"
                                                   value="true"
                                                   class="form-check-input schedule-checkbox"
                                                   data-row="@i"
                                                   @(Model.Schedules[i].IsWorking ? "checked" : "") />
                                        </td>
                                        <td>
                                            <input type="time"
                                                   name="Schedules[@i].StartTime"
                                                   value="@Model.Schedules[i].StartTime.ToString("HH:mm")"
                                                   class="form-control form-control-sm time-input-@i"
                                                   @(Model.Schedules[i].IsWorking ? "" : "disabled") />
                                        </td>
                                        <td>
                                            <input type="time"
                                                   name="Schedules[@i].EndTime"
                                                   value="@Model.Schedules[i].EndTime.ToString("HH:mm")"
                                                   class="form-control form-control-sm time-input-@i"
                                                   @(Model.Schedules[i].IsWorking ? "" : "disabled") />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Güncelle
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('.schedule-checkbox').forEach(cb => {
            cb.addEventListener('change', function () {
                const row = this.dataset.row;
                document.querySelectorAll('.time-input-' + row)
                    .forEach(i => i.disabled = !this.checked);
            });
        });
    </script>
}
