@model IEnumerable<Hairdresser.Api.Models.ViewModels.AppointmentViewModel>

@{
var selectedDate = ViewData["SelectedDate"] as string ?? "";
var workers = Model.Select(a => new { a.WorkerId, a.WorkerName }).Distinct().ToList();
var hours = Enumerable.Range(8, 13);
}

<div class="container my-4">
    <h5 class="mb-4 fw-bold" style="color:#354259">
        Randevular - @selectedDate
    </h5>

    <div class="table-responsive">
        <table class="table align-middle text-center shadow-sm">

            <thead style="background:#354259;color:white;">
            <tr>
                <th style="width:180px;">Çalışan</th>
                @foreach (var hour in hours)
                {
                <th>@hour:00</th>
                }
            </tr>
            </thead>

            <tbody>
            @foreach (var worker in workers)
            {
            <tr>
                <td class="fw-bold text-start ps-3">@worker.WorkerName</td>

                @foreach (var hour in hours)
                {
                var app = Model.FirstOrDefault(a =>
                a.WorkerId == worker.WorkerId &&
                int.Parse(a.Time.Split(':')[0]) == hour);

                <td class="schedule-cell">

                    @if (app != null)
                    {
                    <div class="randevu-cell 
                                    @(app.Status=="confirmed"?"appt-confirmed":
                    app.Status=="pending"?"appt-pending":
                    "appt-cancelled")"
                         onclick="showAppointmentModal('@app.CustomerName','@app.PhoneNumber','@app.ServiceType','@app.Time','@app.Id')">

                        <span class="fw-bold small text-truncate w-100 text-center">@app.CustomerName</span>
                        <span class="fst-italic small text-truncate w-100 text-center">@app.ServiceType</span>
                    </div>
                    }
                    else
                    {
                    <div class="empty-cell"
                         onclick="openCreate('@selectedDate','@worker.WorkerId','@hour:00')">
                        <span class="fw-bold">Randevu Oluştur</span>
                    </div>
                    }

                </td>
                }
            </tr>
            }
            </tbody>

        </table>
    </div>
</div>

<!-- MODAL -->
<!-- MODAL -->
<div class="modal fade" id="appointmentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg" style="border-radius:18px">

            <div class="modal-header" style="background:#354259;color:white;border-radius:18px 18px 0 0">
                <h5 class="modal-title fw-bold">Randevu Detayı</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">

                <div class="mb-2">
                    <small class="text-muted">Müşteri</small>
                    <div id="custName" class="fw-bold fs-6">-</div>
                </div>

                <div class="mb-2">
                    <small class="text-muted">Telefon</small>
                    <div id="custPhone" class="fw-semibold">-</div>
                </div>

                <div class="mb-2">
                    <small class="text-muted">Hizmet</small>
                    <div id="custService" class="fw-semibold">-</div>
                </div>

                <div class="mb-2">
                    <small class="text-muted">Saat</small>
                    <div id="custTime" class="fw-semibold">-</div>
                </div>

            </div>

            <div class="modal-footer d-flex justify-content-between">
                <a id="detailLink" class="btn btn-primary px-3 fw-semibold" href="#">Düzenle</a>
                <a id="cancelLink" class="btn btn-danger px-3 fw-semibold" href="#">İptal Et</a>
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Kapat</button>
            </div>

        </div>
    </div>
</div>

<style>

    body{
        background:#f3f5fb;
    }

    table{
        border-radius:18px;
        overflow:hidden;
    }

    thead th{
        letter-spacing:.4px;
        font-size:13px;
    }

    /* Hücre */
    .schedule-cell{
        min-width:95px;
        height:85px;
        padding:0 !important;
        border:1px solid #e6e8f0 !important;
        background:#ffffff;
        position: relative;
        pointer-events:auto;
    }

    .schedule-cell:hover{
        background:#f1f4ff;
    }

    /* Randevu Kart */
    .randevu-cell{
        width:100%;
        height:100%;
        padding:8px 6px;
        border-radius:14px;
        display:flex;
        flex-direction:column;
        justify-content:center;
        align-items:center;
        cursor:pointer;
        color:white;
        box-shadow:0 6px 12px rgba(0,0,0,.08);
        transition:.25s;
        font-size:13px;
        pointer-events:auto;
    }

    /* Durum renkleri */
    .appt-confirmed{
        background:linear-gradient(135deg,#5EC57E,#2FB36A);
    }

    .appt-pending{
        background:linear-gradient(135deg,#FFD56E,#FF9F29);
        color:#3d2b00 !important;
    }

    .appt-cancelled{
        background:linear-gradient(135deg,#ff6b6b,#c23636);
    }

    /* Boş hücre */
    .empty-cell{
        width:100%;
        height:100%;
        border-radius:14px;
        border:2px dashed #cfd5eb;
        display:flex;
        justify-content:center;
        align-items:center;
        flex-direction:column;
        color:#6b7391;
        font-size:13px;
        font-weight:600;
        cursor:pointer;
        transition:.25s;
        padding:6px;
    }

    .empty-cell:hover{
        border-color:#7184ff;
        background:#eef1ff;
        color:#3a47ff;
        transform:scale(1.03);
    }

    tbody td:first-child{
        background:#ffffff;
        font-weight:700;
        color:#2f365f;
    }

</style>
